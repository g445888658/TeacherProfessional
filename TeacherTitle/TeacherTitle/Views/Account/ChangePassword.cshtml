@model TeacherTitle.Models.ChangePasswordModel
@Html.ValidationSummary(true, "密码修改失败")
@using (Ajax.BeginForm("ChangePassword", "Account", new { U_Code = ViewData["U_Code"] }, new AjaxOptions { UpdateTargetId = "releaseNews" }, new { id = "ChangePasswordForm" }))
{ 
    <table class="myTable" cellpadding="2px" cellspacing="2px">
        <tbody>
            <tr>
                <td>
                    @Html.LabelFor(m => m.OldPassword)
                </td>
                <td>
                    @Html.PasswordFor(m => m.OldPassword, new { @class = "text-long" })
                    @Html.ValidationMessageFor(m => m.OldPassword)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.NewPassword)
                </td>
                <td>
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "text-long" })
                    @Html.ValidationMessageFor(m => m.NewPassword)
                </td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(m => m.ConfirmPassword)
                </td>
                <td>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "text-long" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword)
                </td>
            </tr>
        </tbody>
    </table>
    <div class="button" style="padding-left: 150px;">
        <input type="submit" value="修改" onclick="return checkCondition();" />
    </div>
}
