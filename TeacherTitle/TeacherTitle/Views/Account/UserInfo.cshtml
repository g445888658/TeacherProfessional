<div id="PartailUserInfo">
    @{
        var userInfo = ViewData["UserInfo"] as TeacherTitle.Models.UserModel;
    }
    @using (Ajax.BeginForm("UserInfo", "Account", new { U_Code = userInfo.userModel.U_Code }, new AjaxOptions { UpdateTargetId = "releaseNews" }, new { id = "UserInfoForm" }))
    { 
        <table>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.Label("职工号：")
                        @Html.Label(userInfo.userModel.U_Account)
                    </div>
                    <div class="editor-label">
                        @Html.Label("用户名：")
                        @Html.Label(userInfo.userModel.U_Name)
                    </div>
                    <div class="editor-label">
                        @Html.Label("性别：")
                        @Html.Label(userInfo.userModel.U_Sex.Value)
                    </div>
                    <div class="editor-label">
                        @Html.Label("出生年月：")
                        @Html.Label(userInfo.userModel.U_Birth)
                    </div>
                    <div class="editor-label">
                        @Html.Label("民族：")
                        @Html.Label(userInfo.userModel.U_Nation)
                    </div>
                    <div class="editor-label">
                        @Html.Label("学院：")
                        @Html.Label(userInfo.userModel.U_Institute.Value)
                    </div>
                    <div class="editor-label">
                        @Html.Label("系：")
                        @Html.Label(userInfo.userModel.U_Department.Value)
                    </div>
                    <div class="editor-label">
                        @Html.Label("来校年月：")
                        @Html.Label(userInfo.userModel.U_SchoolTime)
                    </div>
                    <div class="editor-label">
                        @Html.Label("参加工作年月：")
                        @Html.Label(userInfo.userModel.U_WorkTime)
                    </div>
                </td>
                <td>
                    <div class="editor-label">
                        @Html.Label("现从事学科：")
                        @Html.Label(userInfo.userModel.U_Subject)
                    </div>
                    <div class="editor-label">
                        @Html.Label("从事专业：")
                        @Html.Label(userInfo.userModel.U_Major)
                    </div>
                    <div class="editor-label">
                        @Html.Label("研究方向：")
                        @Html.Label(userInfo.userModel.U_Research)
                    </div>
                    <div class="editor-label">
                        @Html.Label("职业技术资格：")
                        @Html.Label(userInfo.userModel.U_Title)
                    </div>
                    <div class="editor-label">
                        @Html.Label("资格级别：")
                        @Html.Label(userInfo.userModel.U_TitleLevel)
                    </div>
                    <div class="editor-label">
                        @Html.Label("专业技术职务聘任时间：")
                        @Html.Label(userInfo.userModel.U_EngageTime)
                    </div>
                    <div class="editor-label">
                        @Html.Label("是否双职称：")
                        @Html.Label(userInfo.userModel.U_IsDoubleTitle)
                    </div>
                    <div class="editor-label">
                        @Html.Label("资格级别：")
                        @Html.Label(userInfo.userModel.U_TitleLevel)
                    </div>
                    <div class="editor-label">
                        @Html.Label("长号：")
                        @Html.TextBox("U_LongPhone", userInfo.userModel.U_LongPhone)
                    </div>
                </td>
                <td>
                    <div class="editor-label">
                        @Html.Label("短号：")
                        @Html.TextBox("U_ShortPhone", userInfo.userModel.U_ShortPhone)
                    </div>
                    <div class="editor-label">
                        @Html.Label("邮箱：")
                        @Html.Label(userInfo.userModel.U_Mail)
                    </div>
                    <div class="editor-label">
                        @Html.Label("QQ号：")
                        @Html.TextBox("U_QQNum", userInfo.userModel.U_QQNum)
                    </div>
                    <div class="editor-label">
                        <input type="submit" value="修改" onclick="return checkCondition();" />
                    </div>
                </td>
            </tr>
        </table>
    }
</div>
